<div class="row">
  <div class="large-12 columns">

    <div class="snippet">
      <div class="snippet-content">
         <%= strip_tags(@story.snippet.content) %>
      </div>
      <div class="snippet-author">
        <% if @story.snippet.user %>
          - <%= link_to @story.snippet.user.username, user_path(@story.snippet.user)  %> (<%= link_to "link", @story.snippet %>)
        <% end %>
      </div>
    </div>

  <div class="story-show">
    <% if @story.title && @story.content %>
      <h4><%= @story.title.html_safe %></h4>
      <%= @story.content.html_safe %>
    <% end %>
  </div>

  <div class="votes">
    <div class="vote-count">
      Votes: <%= @story.vote_count %>
    </div>
    <div class="vote-button">
      <% if current_user %>
        <div id="upvote">
        <% if @vote != nil && @vote.user_id == current_user.id %>
          <%= button_to "Downvote",vote_delete_path(@vote), :method => :delete, :class => "button round", :confirm => "Are you sure ?" %>
        <% else %>
          <%= render "votes/new" %>
        <% end %>
        </div>
      <% end %>
    </div>
  </div>

<% if story_editable?(@story) %>
<div>
  <% if !@story.published %><Br><br>
    <%= link_to "Edit", edit_story_path(@story) %><br>
    <%= link_to "Delete", root_path, :method => :delete %>
  <% end %>
<% end %>
</div>
<br><br>

<%= form_for @story, :url => story_flag_path(@story) do |f| %>
<%= f.submit "Report inappropriate" %>
<% end %>

<div class="story-tags">
  <% @story.tags.each do |tag| %>
    <%= link_to "#{tag.name}", tags_show_path(tag) %><br>
  <% end %>
  <%= render :partial => 'tags/tagform'%>
</div>

<div class="story-badges">
  <%# @story.badges.each do |badge| %>
    <%# badge.title  %>
  <%# end %>
  <% if @story.author != nil %>
    <%= @story.award_badge %>
  <% end %>
</div>
